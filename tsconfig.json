{
	"compilerOptions": {
		"rootDir": "./",
		"outDir": "./dist",
		"target": "es2016",
		"baseUrl": "./",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	"include": [
		"global.d.ts",
		"./*.ts",
		"./*.tsx",
		"./*.js",
		"src/*.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.js"
	]
}
